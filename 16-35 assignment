Q30.
#include <iostream>
using namespace std;

int main() {
    int sum = 0;

    for (int i = 1; i <= 500; i++) {
        if (i % 3 == 0 && i % 7 == 0) {
            continue;
        }

        sum += i;
        cout << i << " ";

        if (sum > 1000) {
            break;
        }
    }

    cout << endl;
    return 0;
}
Q31.
#include <iostream>
using namespace std;

bool isPalindrome(int num) {
    int original = num, reversed = 0, remainder;
    
    while (num != 0) {
        remainder = num % 10;
        reversed = reversed * 10 + remainder;
        num /= 10;
    }

    return original == reversed;
}

int main() {
    int num;
    
    cout << "Enter a number: ";
    cin >> num;

    int reversed = 0, original = num;
    
    while (!isPalindrome(reversed)) {
        reversed = 0;
        int temp = num;
        while (temp != 0) {
            reversed = reversed * 10 + temp % 10;
            temp /= 10;
        }

        cout << "Reversed number: " << reversed << endl;

        if (isPalindrome(reversed)) {
            cout << "The reversed number is a palindrome." << endl;
            break;
        }

        num = reversed;
    }

    return 0;
}
Q32.
#include <iostream>
#include <climits>
using namespace std;

int main() {
    int n;

    cout << "Enter the number of elements in the array: ";
    cin >> n;

    int arr[n];
    cout << "Enter the elements of the array:\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int largest = INT_MIN, secondLargest = INT_MIN;

    for (int i = 0; i < n; i++) {
        if (arr[i] > largest) {
            secondLargest = largest;
            largest = arr[i];
        } else if (arr[i] > secondLargest && arr[i] != largest) {
            secondLargest = arr[i];
        }
    }

    if (secondLargest == INT_MIN) {
        cout << "There is no second largest element.\n";
    } else {
        cout << "The second largest element is: " << secondLargest << endl;
    }

    return 0;
}
Q33.
#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;

bool canBeRepresentedExactly(double num) {
    if (num == floor(num)) {
        return true;
    }

    double diff = num - floor(num);
    while (diff != 0) {
        diff *= 2;
        if (diff == floor(diff)) {
            return true;
        }
        if (fabs(diff - round(diff)) < 1e-15) {
            break;
        }
    }

    return false;
}

int main() {
    double num;

    cout << "Enter a floating-point number: ";
    cin >> num;

    if (canBeRepresentedExactly(num)) {
        cout << "The number " << num << " can be represented exactly in binary.\n";
    } else {
        cout << "The number " << num << " cannot be represented exactly in binary.\n";
    }

    return 0;
}
Q34.
#include <iostream>
using namespace std;

int main() {
    int rows, cols;

    cin >> rows >> cols;

    int arr[rows][cols];

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cin >> arr[i][j];
        }
    }

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << arr[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
Q35.
#include <iostream>
using namespace std;

int gcd(int a, int b) {
    while (b != 0) {
        int temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

int lcm(int a, int b) {
    return (a * b) / gcd(a, b);
}

int main() {
    int a, b;

    cout << "Enter two integers: ";
    cin >> a >> b;

    cout << "GCD of " << a << " and " << b << " is: " << gcd(a, b) << endl;
    cout << "LCM of " << a << " and " << b << " is: " << lcm(a, b) << endl;

    return 0;
}
