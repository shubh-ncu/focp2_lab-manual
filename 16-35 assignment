int main() 
{
    int a=0,b=1,c;
    int num;
    
    cout<<"Enter a number: ";
    cin>>num;

    cout<<"Fibonacci Series: ";
    for (int i=0;i<num;i++) 
    {
        cout<<a<<" ";
        c=a+b;
        a=b;
        b=c;
    }
    cout<<endl;
    return 0;
}
