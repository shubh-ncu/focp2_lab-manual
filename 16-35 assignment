Q24.
#include <iostream>
using namespace std;

int main()
{
    int f=1,n;
    
    cout<<"Enter a value: ";
    cin>>n;

    int a=n; 
    
    if (n<0) 
	{
        cout<<"Factorial is not defined for negative numbers.";
    } 
	else 
	{
    do 
	{
            if (n==0) break; 
            f*=n;
            n--;
    } 
	while (n>1);

        cout<<"Factorial of "<<a<<" is: "<<f;
    }
    return 0;
}
Q25.
#include <iostream>
#include <limits>
#include <string>
using namespace std;

int main() {
    string input;
    int sum = 0, count = 0, num, minNum = INT_MAX, maxNum = INT_MIN;

    cout << "Enter numbers (type 'exit' to stop):\n";
    while (true) {
        cin >> input;
        
        if (input == "exit") {
            break;
        }
        
        try {
            num = stoi(input);
            sum += num;
            count++;
            minNum = min(minNum, num);
            maxNum = max(maxNum, num);
        } catch (...) {
            cout << "Invalid input, enter a number or 'exit'\n";
        }
    }

    if (count > 0) {
        cout << "Sum: " << sum << "\nCount: " << count << "\nMin: " << minNum << "\nMax: " << maxNum << endl;
    } else {
        cout << "No valid numbers entered.\n";
    }

    return 0;
}
Q26.
#include <iostream>
using namespace std;

bool isPrime(int num) {
    if (num<=1) 
    return false;
    for (int i=2;i*i<=num;i++) {
        if (num%i==0) 
    return false;
    }
    return true;
}

int main() {
    int n, count = 0, num = 2;

    cout << "Enter the number of prime numbers to display: ";
    cin >> n;

    cout << "First " << n << " prime numbers are:\n";
    while (count < n) {
        if (isPrime(num)) {
            cout << num << " ";
            count++;
        }
        num++;
    }

    cout << endl;
    return 0;
}
Q27.
#include <iostream>
#include <cmath>
using namespace std;

int main() 
{
    int start,end;
    cout <<"Enter the range (start and end): ";
    cin >>start>>end;

    cout << "Armstrong numbers between " << start << " and " << end << " are:\n";

    for (int num = start; num <= end; num++) {
        int sum = 0, a = num, digits = 0;

        int temp = num;
        while (temp != 0) {
            digits++;
            temp /= 10;
        }

        a = num;
        while (a != 0) {
            int digit = a % 10;
            sum += pow(digit, digits);
            a /= 10;
        }

        if (sum == num) {
            cout << num << " ";
        }
    }
    
    cout << endl;
    return 0;
}

Q28.
#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    int secretNumber, guess, attempts = 10;
    srand(time(0));
    secretNumber = rand() % 100 + 1;

    cout << "Guess the number (1-100). You have " << attempts << " attempts.\n";

    while (attempts--) {
        cout << "Enter your guess: ";
        cin >> guess;

        if (guess == secretNumber) {
            cout << "Correct! You guessed the number.\n";
            return 0;
        } else if (guess > secretNumber) {
            cout << "Too high!\n";
        } else {
            cout << "Too low!\n";
        }

        cout << "Attempts left: " << attempts << "\n";
    }

    cout << "Out of attempts! The number was " << secretNumber << ".\n";
    return 0;
}
