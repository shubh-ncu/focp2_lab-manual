// Q3. Ask  the user to input two numbers and a mathematical operator (+,-,/,*) and display the result the operation. Eg 3*4 output 12(Hint: use switch case)
#include<iostream>
using namespace std;
int main()
{
	int a,b,choice;
	cout<<"enter 2 numbers: ";
	cin>>a>>b;
	cout<<"enter your choice";
	cin>>choice;
	switch(choice)
	{
		case 1:
			cout<<"+"<<a+b;
			break;
	    case 2:
	    	cout<<"-"<<a-b;
	    	break;
	    case 3:
	    	cout<<"*"<<a*b;
	    	break;
	    case 4:
	    	cout<<"/"<<a/b;
	    	break;
	    default:
	    	cout<<"invalid";
		
	}
}
